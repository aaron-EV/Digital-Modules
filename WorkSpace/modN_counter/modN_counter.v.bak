/*
*	Description: Counter of M states which counts to N value.
*	Author: Aar√≥n Escoboza Villegas
*/

module modN_counter#(parameter M = 4,parameter N = M - 1)
(
	input clk,
	input reset,
	input en,
	output reg [M-1:0] outCounter
);

always@(posedge clk,negedge reset) 
begin 
	if (!reset)
		outReg <= 0;
	else if (en)
		outReg <= outReg + 1;
	else if (en && (outReg == N))
		outReg <= 0;
	else 
		outReg <= outReg;
end

endmodule