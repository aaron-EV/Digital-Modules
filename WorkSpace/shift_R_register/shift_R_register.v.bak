module shift_R_register #(paramater n = 8)
(
	input clk, 
	input reset,
	input din,
	output [n-1:0]out


);



always @(posedge clk,negedge reset)
begin
	if(!reset)
		out <= 0;
	else
		out <= {din,out[6:1]};
	
end

endmodule